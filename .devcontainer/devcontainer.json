{
  "name": "Scala 3 Compiler Plugin Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  // VSCode Settings
  "customizations": {
    "vscode": {
      "extensions": [
        "scalameta.metals",
        "scala-lang.scala",
        "mhutchie.git-graph",
        "eamodio.gitlens"
      ],
      "settings": {
        // Metals Settings
        "metals.serverVersion": "1.6.2",
        "metals.javaHome": "/opt/java/openjdk",
        "metals.millScript": "/usr/local/bin/mill",
        "metals.defaultBspToBuildTool": true,
        "metals.enableBestEffort": true,
        "metals.showInferredType": true,
        "metals.showImplicitArguments": true,
        "metals.enableSemanticHighlighting": true,

        // Editor Settings
        "editor.formatOnSave": true,
        "files.watcherExclude": {
          "**/target": true,
          "**/.bloop": true,
          "**/.metals": true,
          "**/out": true
        },

        // Terminal
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    },

    // DevPod specific settings
    "devpod": {
      // Für DevPod-spezifische Konfigurationen
    }
  },

  // Ports für Debugging und Build Server
  "forwardPorts": [8212, 5005],

  // Post-Create: Initialisiere Projekt
  "postCreateCommand": "mill version && mill __.compile || true",

  // Mounts für Performance (optional)
  "mounts": [
    // Cache Mill build outputs
    "source=devcontainer-mill-cache,target=/home/vscode/.cache,type=volume",
    // Cache Coursier downloads
    "source=devcontainer-coursier-cache,target=/home/vscode/.cache/coursier,type=volume"
  ],

  // Features für zusätzliche Tools
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // User Settings
  "remoteUser": "vscode"
}
